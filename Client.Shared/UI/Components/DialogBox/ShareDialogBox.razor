@using Client.Shared.UI.Components.DialogBox
@using MudBlazor



<MudDialog class="d-flex align-center justify-content-center flex-column" style="width:40% !important">
    <DialogContent>
        <MudText Typo="Typo.h6">@(Title??"")</MudText>
        <MudText Typo="Typo.body1">@Message</MudText>
    </DialogContent>
    <DialogActions >
        <div class="d-flex justify-content-around align-items-center">
            <MudButton OnClick="onConfirm" Color="@PrimaryColor">BtnOKLabel</MudButton>
            <MudButton OnClick="onCancel" Color="Color.Secondary">BtnCancelLabel</MudButton>
        </div>
    </DialogActions>
</MudDialog>


@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string Message { get; set; }
    [Parameter] public Color PrimaryColor { get; set; } 
    [Parameter] public string ButtonOKLabel { get; set; } = "OK";
    [Parameter] public string ButtonCancelLabel { get; set; } = "Cancel";

    private void onCancel()
    {
        MudDialog.Close(DialogResult.Cancel());

    }


    private void onConfirm()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }




}
